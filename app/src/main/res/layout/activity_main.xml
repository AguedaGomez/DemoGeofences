<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ssii.demogeofences2.MainActivity">

    <include
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="367dp"
        android:layout_height="495dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">



        <ImageButton
            android:id="@+id/locationButton"
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/markerbutton"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/localizationTextInfo"
            android:layout_width="338dp"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/convergence"
            android:text="Estás en"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/convergence"
            android:text="Pulsa en el icono de localización si tu ubicación no es correcta"
            android:textAlignment="center" />

        <Button
            android:id="@+id/learnButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/blackbuttondesign"
            android:fontFamily="@font/convergence"
            android:text="@string/learn_button"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/testButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/blackbuttondesign"
            android:fontFamily="@font/convergence"
            android:text="@string/evaluation_button"
            android:textSize="24sp" />

        <Button
            android:id="@+id/localizeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/blackbuttondesign"
            android:drawableStart="@drawable/ic_gps_fixed_black_24dp"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:paddingLeft="32dp"
            android:text="@string/localize_button"
            android:textSize="24sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
