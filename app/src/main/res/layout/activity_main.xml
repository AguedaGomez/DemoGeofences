<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ssii.demogeofences2.MainActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/linearLayout2">

        <ImageButton
            android:id="@+id/locationButton"
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="48dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_marker"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/localizationTextInfo"
            android:layout_width="338dp"
            android:layout_height="90dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/convergence"
            android:text="EstÃ¡s en"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/learnButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/blackbuttondesign"
            android:fontFamily="@font/convergence"
            android:text="@string/learn_button"
            android:layout_marginHorizontal="16dp"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_light_focused"
            android:textSize="24sp" />

        <Button
            android:id="@+id/testButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/blackbuttondesign"
            android:fontFamily="@font/convergence"
            android:text="@string/evaluation_button"
            android:textColor="@color/common_google_signin_btn_text_light_focused"
            android:textSize="24sp" />

    </LinearLayout>

</RelativeLayout>
